<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-1/css/all.min.css" integrity="sha512-ZYg+hQvLlM0W9C3P6vTpes5LmJ66G2EsroxDNzwD6qiulckldb29eD9I672HL2X+LH5nRhY1sQqZLJGB+aUUPg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">Isaksen's Bookstore</div>
                <div class="col-6 text-right">
                    <vc:purchase-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <vc:types></vc:types>

            <div class="embed-responsive embed-responsive-16by9 d-grid gap-2">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/mbCJqdrzwcE" allowfullscreen></iframe>
            </div>

        </div>

        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
